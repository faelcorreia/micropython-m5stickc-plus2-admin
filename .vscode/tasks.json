{
	"version": "2.0.0",
	"options": {
		"env": {
			"PORT": "/dev/ttyACM0",
			"BAUDRATE": "115200"
		}
	},
	"tasks": [
		{
			"label": "copy",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE} cp -r cplus2_admin/* /pyboard"
		},
		{
			"label": "clear",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE} rm -r /pyboard/*"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE} repl '~ import machine ~ machine.reset()'",
			"dependsOn": [
				"copy"
			]
		},
		{
			"label": "list",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE} ls /pyboard/*"
		},
		{
			"label": "repl",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE} repl"
		},
		{
			"label": "shell",
			"type": "shell",
			"command": "rshell --port ${PORT} --baud ${BAUDRATE}"
		}
	]
}